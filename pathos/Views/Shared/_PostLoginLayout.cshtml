<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/PostLoginSite.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <img id="img_logo" alt="Logo" src="@Url.Content("~/Content/images/logo.jpg")" /> 
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </header>
        <nav>
            <ul id="menu_list">
                <li>@Html.ActionLink("My Library", "", "")</li>
                <li>@Html.ActionLink("My Portfolio", "", "")</li>
                <li>@Html.ActionLink("My Updates", "", "")</li>
                <li>@Html.ActionLink("Shop", "", "")</li>
            </ul>
        </nav>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
